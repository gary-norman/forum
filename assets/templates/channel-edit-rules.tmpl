{{ define "channel-edit-rules" }}
{{ $dot := .dot }}
{{ $userID := .userID }}
{{ with .CurrentUser }}
  {{ $userID = .ID }}
{{ end }}
{{ $thisEntity := .ThisChannel }}
{{ $tracer := printf "%s > %s" .Tracer "channel-edit-rules" }}
{{ with $tracer }}
{{/*  {{ fprint "Trace" . }}*/}}
{{ end }}
  <div id="right-panel-container-rules">
    <div class="right-panel-bio flex-space-between ">
    {{ if (eq $dot.ThisChannel.OwnerID $userID) }}
      <label class="padded" for="rules-content">Edit channel rules</label>
      <button popovertarget="form-edit-channel-rules" id="right-panel-channel--edit-channel-rules" class="btn-sm btn-icoonly" autofocus>
        <span class="btn-edit" role="contentinfo" aria-label="Edit channel rules"></span>
      </button>
    {{ else }}
      <label class="padded" for="rules-content">Rules</label>
    {{ end }}
    </div>
    <div id="rules-content" class="side-panel-block">
      <ul class="sidebar-channel-ul">
        {{ range $dot.Rules}}
        <li>{{ .Rule }}</li>
        {{ end }}
      </ul>
      <textarea class="inactive-input" name="content" style="display: none">Placeholder text... Placeholder text...</textarea>
    </div>
  </div>
{{ end }}
