{{ define "user-page-banner" -}}
  {{ $userID := .UserID }}
  {{ with .CurrentUser }}
    {{ $userID = .ID }}
  {{ end }}
  {{ $dot := .dot }}
  {{ $instance := $dot.Instance }}
  {{ $tracer := printf "%s > %s" .Tracer "post-page-banner" }}
  {{ with $tracer }}
{{/*    {{ fprint "Trace" . }} */}}
  {{ end }}
{{ if ne $userID $dot.ThisUser.ID }}
<div id="user-page-banner" class="banner">
{{ else }}
<div id="user-page-banner" class="banner-user">
{{ end }}
  <img class="page-banner" src="/assets/images/user-banner.jpeg" alt="User Banner Image">
{{ if ne $userID $dot.ThisUser.ID }}
  <div class="page-control">
  {{ else }}
  <div class="page-control-user">
  {{ end }}
    <div class="page-profile">
        {{ if (startsWith $dot.ThisUser.Avatar "noimage") }}
          <div class="sidebar-pic profile-pic--empty" data-name-user-sidebar="{{ $dot.ThisUser.Username}}"></div>
        {{ else }}
          <div class="sidebar-pic profile-pic user-page-pic" data-image-user="{{ $dot.ImagePaths.User }}{{ $dot.ThisUser.Avatar }}"></div>
        {{ end }}
      <div class="flex-start">
          <h2 class="align-self-start user-name">{{ $dot.ThisUser.Username }}</h2>
          <div>
              <div class="cont-flex-column">
                <small>following:</small>
                <button class="btn-lg btn-icotext btn-follows btn-invert-never">
                  <span class="btn-following">{{$dot.ThisUser.Following}}</span>
                </button>
              </div>
            <div class="cont-flex-column">
              <small>followers:</small>
              <button class="btn-lg btn-icotext btn-follows btn-invert-never">
                <span class="btn-followers">{{$dot.ThisUser.Followers}}</span>
              </button>
            </div>
          </div>
      </div>
      </div>
      <div class="page-buttons">
      {{ if ne $userID $dot.ThisUser.ID }}
        <button class="btn-lg btn-primary btn-icotext btn-action-primary btn-invert-onoff_onoff">
            <span class="btn-follow">follow</span>
        </button>
        {{ end }}
        {{/* <div class="user-following"></div> */}}
        <button class="btn-md btn-secondary btn-filled btn-filled-fancy btn-icoonly btn-action-secondary btn-invert-onoff_offoff">
            <img src="/assets/icons/share_16.svg" alt="share button">
        </button>
      {{ if ne $userID $dot.ThisUser.ID }}
        <button class="btn-md s16 btn-secondary btn-filled btn-filled-fancy btn-icoonly btn-action-secondary btn-invert-never">
            <img src="/assets/icons/heart-empty_24.svg" alt="like button">
        </button>
        {{ end }}
      </div>
    </div>
  </div>
{{ end }}
